<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Show The Avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowTheAvatar"
            tools:ignore="UnknownId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="144dp"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintTop_toBottomOf="@+id/edUserName"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="395dp"
            android:layout_height="559dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnShowTheAvatar"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.006"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="User Name "
            android:ems="10"
            android:id="@+id/edUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>